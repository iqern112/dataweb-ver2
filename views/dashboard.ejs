<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <style>
        .stat-box{
            box-sizing: border-box;
            padding-left: 10px;
            padding-right: 10px;
            margin-bottom: 10px;
        }
    </style>
    <div>
        <div class="layer2">
            <select id="yearSelect" onchange="fetchDataByYear()">
                <option value="fifa22">ปี 2022</option>
                <option value="fifa21">ปี 2021</option>
                <option value="fifa20">ปี 2020</option>
                <option value="fifa19">ปี 2019</option>
                <option value="fifa18">ปี 2018</option>
                <option value="fifa17">ปี 2017</option>
                <!-- เพิ่มปีอื่น ๆ ตามต้องการ -->
            </select>
        </div>

        <div class="stats">
            <div class="stat-box">
                <h2>Total Player</h2>
                <div id="totalDisplay">xxxxxx</div> <!-- Element สำหรับแสดงผลลัพธ์ -->
            </div>

            <div class="stat-box">
                <h2>Total Player</h2>
                <div id="growthrateDisplay">xxxxxx</div> <!-- Element สำหรับแสดงผลลัพธ์ -->
            </div>

            <div class="stat-box">
                <h2>Total Player</h2>
                <div class="countDisplay">xxxxxx</div> <!-- Element สำหรับแสดงผลลัพธ์ -->
            </div>
        </div>

    </div>
    <script>
        async function fetchDataByYear() {
            const year = document.getElementById('yearSelect').value
            try {
                const response = await fetch(`/dashboard/data/${year}`);
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                const data = await response.json();
                updateTotalDisplay(data);
                growthrateDisplay(data)
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        }
        function updateTotalDisplay(data) {
            const countDisplay = document.getElementById('totalDisplay'); // Element สำหรับแสดงผลลัพธ์
            if (data && data.length > 0) {
                countDisplay.textContent = `${data[0].count}`; // แสดงจำนวนผู้เล่น
            } else {
                countDisplay.textContent = 'none'; // กรณีไม่มีข้อมูล
            }
        }

        function growthrateDisplay(data) {
            const countDisplay = document.getElementById('growthrateDisplay'); // Element สำหรับแสดงผลลัพธ์
            let calculate = (data[0].count-data[1].count) / data[1].count * 100
            
            const growthRate = calculate.toFixed(2) 
            console.log(growthRate)
            if (data && data.length > 0) {
                countDisplay.textContent = `${growthRate}`; // แสดงจำนวนผู้เล่น
            } else {
                countDisplay.textContent = 'none'; // กรณีไม่มีข้อมูล
            }
        }
    </script>

</body>

</html>