<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <div>
        <div class="layer2">
            <select id="yearSelect" onchange="fetchDataByYear()">
                <option value="fifa22">ปี 2022</option>
                <option value="fifa21">ปี 2021</option>
                <!-- เพิ่มปีอื่น ๆ ตามต้องการ -->
            </select>
        </div>

        <div id="countDisplay">Total Player</div> <!-- Element สำหรับแสดงผลลัพธ์ -->


        <h1>Welcome to the Dashboard</h1>
        <div class="stats">
            <div class="stat-box">
                <h2>Users</h2>
                <p>120</p>
            </div>
            <div class="stat-box">
                <h2>Sales</h2>
                <p>$3400</p>
            </div>
            <div class="stat-box">
                <h2>Feedback</h2>
                <p>85</p>
            </div>
        </div>
    </div>

    </div>
    <script>
        async function fetchDataByYear() {
            const year = document.getElementById('yearSelect').value;
            try {
                const response = await fetch(`/dashboard/data/${year}`);
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                const data = await response.json();
                updateCountDisplay(data);
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        }

        function updateCountDisplay(data) {
            const countDisplay = document.getElementById('countDisplay'); // Element สำหรับแสดงผลลัพธ์
            if (data && data.length > 0) {
                countDisplay.textContent = `Count: ${data[0].count}`; // แสดงจำนวนผู้เล่น
            } else {
                countDisplay.textContent = 'Count: 0'; // กรณีไม่มีข้อมูล
            }
        }
    </script>

</body>

</html>