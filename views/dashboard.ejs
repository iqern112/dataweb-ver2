<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <div>
        <div class="layer2">
            <select id="yearSelect" onchange="fetchDataByYear();">
                <option value="fifa22">ปี 2022</option>
                <option value="fifa21">ปี 2021</option>
                <option value="fifa20">ปี 2020</option>
                <option value="fifa19">ปี 2019</option>
                <option value="fifa18">ปี 2018</option>
                <option value="fifa17">ปี 2017</option>
                <!-- เพิ่มปีอื่น ๆ ตามต้องการ -->
            </select>
        </div>

        <div class="stats">
            <div class="stat-box">
                <h2>Total Player</h2>
                <div id="totalDisplay"> 0</div> <!-- Element สำหรับแสดงผลลัพธ์ -->
            </div>

            <div class="stat-box">
                <h2>Total Player</h2>
                <div id="growthrateDisplay"> 0</div> <!-- Element สำหรับแสดงผลลัพธ์ -->
            </div>

            <div class="stat-box">
                <h2>Total Player</h2>
                <div class="countDisplay"> 0</div> <!-- Element สำหรับแสดงผลลัพธ์ -->
            </div>
        </div>
        <div class="container chart-grid"> 
            <div class="grid-item">
                <canvas id="barChart"></canvas>
            </div>
            <div class="grid-item">
                <canvas id="pieChart"></canvas>
            </div>
            <div class="grid-item">

            </div>
            <div class="grid-item">

            </div>
        </div>

    </div>


    <script src="/js/fetchByYear.js"></script>
    <script>
        function updateTotalDisplay(data) {
            const countDisplay = document.getElementById('totalDisplay'); // Element สำหรับแสดงผลลัพธ์
            if (data && data.length > 0) {
                countDisplay.textContent = `${data[0].count}`; // แสดงจำนวนผู้เล่น
            } else {
                countDisplay.textContent = 'none'; // กรณีไม่มีข้อมูล
            }
        }

        function growthrateDisplay(data) {
            const countDisplay = document.getElementById('growthrateDisplay'); // Element สำหรับแสดงผลลัพธ์

            let calculate = (data[0].count-data[1].count) / data[1].count * 100
            
            const growthRate = calculate.toFixed(2) 
            console.log(growthRate)
            if (data && data.length > 0) {
                countDisplay.textContent = `${growthRate}`; // แสดงจำนวนผู้เล่น
            } else {
                countDisplay.textContent = 'none'; // กรณีไม่มีข้อมูล
            }
        }
    </script>
    <script src="/js/chart.js"></script>
</body>

</html>