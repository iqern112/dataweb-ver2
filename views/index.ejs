function applyFilter() {
    // เลือก checkbox ทั้งหมดที่มีชื่อเป็น 'columns'
    const checkboxes = document.querySelectorAll('input[name="columns"]');

    // สร้าง array สำหรับเก็บชื่อคอลัมน์ที่ถูกเลือก
    const selectedColumns = [];

    // ตรวจสอบสถานะของแต่ละ checkbox
    checkboxes.forEach(checkbox => {
        if (checkbox.checked) {
            selectedColumns.push(checkbox.value); // ถ้าติ๊ก checkbox จะเพิ่มค่าของมันไปยัง array
        }
    });

    // สร้าง filterData object สำหรับส่งข้อมูล
    const filterData = {
        columns: selectedColumns, // รวมชื่อคอลัมน์ที่ถูกเลือก
        searchInput: document.getElementById('searchInput').value, // ข้อความค้นหา
        position: document.getElementById('positionFilter').value, // ตำแหน่ง
        year: document.getElementById('yearDropdownplayerinfo').value // ปีที่เลือก
    };

    // ส่งข้อมูลไปยังเซิร์ฟเวอร์ด้วย fetch API
    fetch('/filter', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(filterData)
    })
    .then(response => response.json())
    .then(data => {
        // แสดงข้อมูลที่ได้จากเซิร์ฟเวอร์ (data) ที่แสดงผล
        displayFilteredData(data); // เรียกใช้ฟังก์ชันเพื่อแสดงข้อมูลที่ได้บนหน้าเว็บ
        console.log(data);
    })
    .catch(error => {
        console.error('Error:', error);
    });
}





// ฟังก์ชันแสดงข้อมูลใน data-display-box
function displayFilteredData(data) {
    const playerDataList = document.getElementById('playerDataList');
    playerDataList.innerHTML = ''; // เคลียร์ข้อมูลเก่าก่อนแสดงข้อมูลใหม่

    // สร้างตารางเพื่อแสดงข้อมูล
    const table = document.createElement('table');
    table.style.width = '100%';
    table.style.borderCollapse = 'collapse';
    
    // สร้างส่วนหัวของตาราง
    const headerRow = document.createElement('tr');
    const headers = ['sofifa_id', 'short_name', 'long_name', 'club_position', 'overall', 'value_eur', 'wage_eur', 'club_name', 'age', 'nationality_name'];

    headers.forEach(header => {
        const th = document.createElement('th');
        th.textContent = header;
        th.style.border = '1px solid #ccc';
        th.style.padding = '8px';
        th.style.textAlign = 'left';
        headerRow.appendChild(th);
    });

    table.appendChild(headerRow);

    if (data.length === 0) {
        playerDataList.innerHTML = '<p>No data available. Apply a filter to see results.</p>';
    } else {
        data.forEach(player => {
            const row = document.createElement('tr');

            headers.forEach(header => {
                const td = document.createElement('td');
                td.textContent = player[header] || 'N/A'; // แสดงข้อมูลหรือ 'N/A' หากไม่มีข้อมูล
                td.style.border = '1px solid #ccc';
                td.style.padding = '8px';
                row.appendChild(td);
            });

            table.appendChild(row);
        });

        playerDataList.appendChild(table); // เพิ่มตารางไปยัง playerDataList
    }
}

