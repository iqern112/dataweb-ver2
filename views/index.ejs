    <script>
        // ตัวอย่างการกำหนดสถานะผู้ใช้
        let userStatus = "Guest"; // ค่าดีฟอลต์เป็น Guest
        
        // ฟังก์ชันสำหรับการเข้าสู่ระบบ
        function login() {
            userStatus = userStatus === "Guest" ? "Admin" : "Guest";
            document.getElementById("statusBtn").innerText = userStatus;
        }
    </script>

